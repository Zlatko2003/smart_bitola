<div class="adminPanel">
	<%- partial('../../../partials/admin/header.ejs') %>

    <div class="content">
        <h1><%= title %></h1>
        <div class="row" style="margin-top: 30px;">
        	<div class="col-12 col-sm-12 col-md-6 col-lg-6">
        		<form action="/admin/update-user/<%= user.id %>" method="POST">
                    <input type="string" name="username" placeholder="Корисничко име" value="<%= user.username %>">
                    <input type="string" name="email" placeholder="Email адреса" value="<%= user.email %>">
                    <input type="string" name="password" placeholder="Лозинка" max="10" disabled>

                    <input type="submit" name="Измени">
                </form>
        	</div>
        </div>
    </div>
</div>